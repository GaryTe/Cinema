{
  "name": "what-to-watch",
  "version": "4.0.0",
  "description": "Проект «{{projectTitle}}» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --c --t SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "mock:server": "json-server --watch ./mocks/mock-server-data.json",
    "ts": "node --no-warnings=ExperimentalWarning --loader ts-node/esm"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "pino-pretty": "11.2.2",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.8.0",
    "axios": "1.7.7",
    "chalk": "5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dotenv": "16.4.5",
    "inversify": "6.0.2",
    "mongoose": "8.7.1",
    "pino": "9.4.0",
    "reflect-metadata": "0.2.2"
  }
}
